<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Propbandhu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Broker Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/broker/dashboard" class="flex items-center">
                        <span class="text-xl font-bold text-gray-900">Propbandhu Broker</span>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-700 font-medium">ü§ù Broker: <%= user.name %></span>
                    <a href="/broker/dashboard" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                    </a>
                    <a href="/broker/properties" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-home mr-1"></i>Properties
                    </a>
                    <a href="/broker/commissions" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-money-bill-wave mr-1"></i>Commissions
                    </a>
                    <a href="/broker/visits" class="text-gray-600 hover:text-blue-600 <%= activePage === 'broker' ? 'text-blue-600 font-semibold' : '' %>">
                        <i class="fas fa-calendar-day mr-1"></i>Visits
                    </a>
                    <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">
                        <i class="fas fa-sign-out-alt mr-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Property Visits</h1>
                    <p class="text-gray-600 mt-2">Manage property visits and confirmations</p>
                </div>
                <div class="text-right">
                    <p class="text-xl font-bold text-blue-600"><%= visits.length %> visits</p>
                    <p class="text-gray-600">Total scheduled</p>
                </div>
            </div>

            <!-- Filters -->
            <div class="bg-white rounded-xl shadow p-6 mb-6">
                <form method="GET" class="flex items-center space-x-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Visit Status</label>
                        <select name="status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All Visits</option>
                            <option value="scheduled" <%= filters.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                            <option value="confirmed" <%= filters.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                            <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>Completed</option>
                        </select>
                    </div>
                    
                    <div class="flex items-end space-x-3">
                        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
                            <i class="fas fa-filter mr-2"></i>Filter
                        </button>
                        <a href="/broker/visits" class="bg-gray-200 text-gray-800 px-6 py-2 rounded-lg font-semibold hover:bg-gray-300 transition">
                            <i class="fas fa-times mr-2"></i>Clear
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Visits List -->
        <div class="grid grid-cols-1 gap-6">
            <% if (visits.length === 0) { %>
                <div class="bg-white rounded-xl shadow p-12 text-center">
                    <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-700 mb-2">No visits scheduled</h3>
                    <p class="text-gray-600 mb-6">When buyers schedule visits for your properties, they will appear here.</p>
                    <a href="/broker/properties" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-home mr-2"></i>View Properties
                    </a>
                </div>
            <% } else { %>
                <% visits.forEach(visit => { 
                    const property = visit.property;
                    const buyer = visit.buyer;
                    const statusColors = {
                        'scheduled': 'bg-blue-100 text-blue-800',
                        'confirmed': 'bg-green-100 text-green-800',
                        'pending': 'bg-yellow-100 text-yellow-800',
                        'completed': 'bg-purple-100 text-purple-800'
                    };
                    const statusColor = statusColors[visit.visit_status] || 'bg-gray-100 text-gray-800';
                %>
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                    <div class="p-6">
                        <div class="flex flex-col md:flex-row gap-6">
                            <!-- Property Info -->
                            <div class="md:w-2/3">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-900 mb-2">
                                            <%= property.title %>
                                        </h3>
                                        <p class="text-gray-600 mb-1">
                                            <i class="fas fa-map-marker-alt mr-2 text-blue-500"></i>
                                            <%= property.address ? property.address.area + ', ' + property.address.city : 'Location not specified' %>
                                        </p>
                                        <p class="text-2xl font-bold text-blue-600">
                                            ‚Çπ<%= property.price ? property.price.toLocaleString() : 'Price not set' %>
                                        </p>
                                    </div>
                                    <div class="text-right">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= statusColor %>">
                                            <%= visit.visit_status %>
                                        </span>
                                        <p class="text-sm text-gray-500 mt-2">
                                            <%= visit.added_at ? new Date(visit.added_at).toLocaleDateString('en-IN') : 'Date not set' %>
                                        </p>
                                    </div>
                                </div>

                                <!-- Visit Details -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                    <div class="bg-gray-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-gray-900 mb-2">
                                            <i class="fas fa-user mr-2 text-blue-600"></i>Buyer Details
                                        </h4>
                                        <% if (buyer) { %>
                                        <p class="text-gray-700"><%= buyer.name %></p>
                                        <p class="text-gray-600 text-sm">
                                            <i class="fas fa-phone mr-1"></i> <%= buyer.phone || 'Phone not provided' %>
                                        </p>
                                        <p class="text-gray-600 text-sm">
                                            <i class="fas fa-envelope mr-1"></i> <%= buyer.email || 'Email not provided' %>
                                        </p>
                                        <% } else { %>
                                        <p class="text-gray-500 text-sm">Buyer information not available</p>
                                        <% } %>
                                    </div>

                                    <div class="bg-gray-50 rounded-lg p-4">
                                        <h4 class="font-semibold text-gray-900 mb-2">
                                            <i class="fas fa-calendar-alt mr-2 text-green-600"></i>Visit Schedule
                                        </h4>
                                        <% if (visit.visit_date) { %>
                                        <p class="text-gray-700">
                                            <i class="fas fa-clock mr-2"></i>
                                            <%= new Date(visit.visit_date).toLocaleDateString('en-IN', { 
                                                weekday: 'long',
                                                year: 'numeric',
                                                month: 'long',
                                                day: 'numeric'
                                            }) %>
                                        </p>
                                        <p class="text-gray-600 text-sm">
                                            Time: <%= new Date(visit.visit_date).toLocaleTimeString('en-IN', {
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </p>
                                        <% } else { %>
                                        <p class="text-gray-500 text-sm">Visit date not scheduled yet</p>
                                        <% } %>
                                        
                                        <% if (visit.visit_notes) { %>
                                        <p class="text-gray-600 text-sm mt-2">
                                            <i class="fas fa-sticky-note mr-1"></i> Notes: <%= visit.visit_notes %>
                                        </p>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Seller Info -->
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                                    <h4 class="font-semibold text-blue-900 mb-2">
                                        <i class="fas fa-user-tie mr-2"></i>Seller Information
                                    </h4>
                                    <% if (property.seller) { %>
                                    <p class="text-blue-800"><%= property.seller.name %></p>
                                    <p class="text-blue-700 text-sm">
                                        <i class="fas fa-phone mr-1"></i> <%= property.seller.phone || 'Phone not provided' %>
                                    </p>
                                    <% } else { %>
                                    <p class="text-blue-700 text-sm">Seller information not available</p>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="md:w-1/3">
                                <div class="bg-gray-50 rounded-lg p-4 h-full">
                                    <h4 class="font-semibold text-gray-900 mb-4">Actions</h4>
                                    
                                    <div class="space-y-3">
                                        <!-- Schedule Visit Button -->
                                        <% if (!visit.visit_date && property._id) { %>
                                        <a href="/broker/visits/schedule/<%= property._id %>" 
                                           class="block w-full bg-blue-600 text-white text-center py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                                            <i class="fas fa-calendar-plus mr-2"></i>Schedule Visit
                                        </a>
                                        <% } %>
                                        
                                        <!-- Confirm Visit Button -->
                                        <% if (visit.visit_date && visit.visit_status !== 'confirmed' && visit.visit_status !== 'completed') { %>
                                        <button onclick="confirmVisit('<%= property._id %>')" 
                                                class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition">
                                            <i class="fas fa-check-circle mr-2"></i>Confirm Visit
                                        </button>
                                        <% } %>
                                        
                                        <!-- View Property -->
                                        <a href="/broker/properties/<%= property._id %>" 
                                           class="block w-full border border-blue-600 text-blue-600 text-center py-3 rounded-lg font-semibold hover:bg-blue-50 transition">
                                            <i class="fas fa-eye mr-2"></i>View Property
                                        </a>
                                        
                                        <!-- Contact Buyer -->
                                        <% if (buyer && buyer.phone) { %>
                                        <a href="tel:<%= buyer.phone %>" 
                                           class="block w-full border border-green-600 text-green-600 text-center py-3 rounded-lg font-semibold hover:bg-green-50 transition">
                                            <i class="fas fa-phone mr-2"></i>Call Buyer
                                        </a>
                                        <% } %>
                                        
                                        <!-- Contact Seller -->
                                        <% if (property.seller && property.seller.phone) { %>
                                        <a href="tel:<%= property.seller.phone %>" 
                                           class="block w-full border border-purple-600 text-purple-600 text-center py-3 rounded-lg font-semibold hover:bg-purple-50 transition">
                                            <i class="fas fa-phone mr-2"></i>Call Seller
                                        </a>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Visit Status Info -->
                                    <div class="mt-4 pt-4 border-t border-gray-200">
                                        <% if (visit.visit_confirmed_at) { %>
                                        <p class="text-sm text-green-600">
                                            <i class="fas fa-check-circle mr-1"></i>
                                            Confirmed on: <%= new Date(visit.visit_confirmed_at).toLocaleDateString('en-IN') %>
                                        </p>
                                        <% } %>
                                        
                                        <% if (visit.booking_window_end) { %>
                                        <p class="text-sm text-blue-600 mt-1">
                                            <i class="fas fa-hourglass-half mr-1"></i>
                                            Booking window ends: <%= new Date(visit.booking_window_end).toLocaleDateString('en-IN') %>
                                        </p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Confirm visit function
        function confirmVisit(propertyId) {
            if (confirm('Are you sure you want to confirm this visit? This will start the 60-day booking window.')) {
                fetch(`/broker/api/visits/${propertyId}/confirm`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        method: 'manual',
                        notes: 'Visit confirmed by broker'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Visit confirmed successfully! Commission has been recorded.');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to confirm visit. Please try again.');
                });
            }
        }

        // Auto-refresh visits every 30 seconds
        setInterval(() => {
            if (document.visibilityState === 'visible') {
                location.reload();
            }
        }, 30000);
    </script>
</body>
</html>