<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Propbandhu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <span class="text-xl font-bold text-gray-900">Propbandhu</span>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/buyer/dashboard" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-home mr-1"></i>Dashboard
                    </a>
                    <a href="/buyer/properties" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-search mr-1"></i>Browse
                    </a>
                    <a href="/buyer/cart" class="text-gray-600 hover:text-blue-600">
                        <i class="fas fa-shopping-cart mr-1"></i>My Cart
                    </a>
                    <a href="/buyer/visits" class="text-blue-600 font-medium">
                        <i class="fas fa-calendar-day mr-1"></i>My Visits
                    </a>
                    <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">
                        <i class="fas fa-sign-out-alt mr-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-bold text-gray-900">My Property Visits</h1>
            <a href="/buyer/cart" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                <i class="fas fa-shopping-cart mr-2"></i>View Cart
            </a>
        </div>

        <!-- Visit Status Tabs -->
        <div class="flex border-b border-gray-200 mb-6">
            <button onclick="filterVisits('all')" 
                    class="px-4 py-2 font-medium border-b-2 border-blue-500 text-blue-600">
                All Visits
            </button>
            <button onclick="filterVisits('pending')" 
                    class="px-4 py-2 font-medium text-gray-600 hover:text-blue-600">
                Pending
            </button>
            <button onclick="filterVisits('confirmed')" 
                    class="px-4 py-2 font-medium text-gray-600 hover:text-blue-600">
                Confirmed
            </button>
            <button onclick="filterVisits('expired')" 
                    class="px-4 py-2 font-medium text-gray-600 hover:text-blue-600">
                Expired
            </button>
        </div>

        <!-- Visits List -->
        <% if (visits.length === 0) { %>
        <div class="text-center py-12 bg-white rounded-xl shadow">
            <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No visits scheduled</h3>
            <p class="text-gray-600 mb-6">Properties you add to cart will appear here for visit scheduling</p>
            <a href="/buyer/properties" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
                <i class="fas fa-search mr-2"></i>Browse Properties
            </a>
        </div>
        <% } else { %>
        <div class="space-y-6">
            <% visits.forEach(item => { 
                const property = item.property;
                const addedDate = new Date(item.added_at);
                const visitExpiry = new Date(addedDate);
                visitExpiry.setDate(visitExpiry.getDate() + 7);
                const now = new Date();
                const daysLeft = Math.ceil((visitExpiry - now) / (1000 * 60 * 60 * 24));
                const isExpired = daysLeft <= 0;
                const isConfirmed = item.visit_status === 'confirmed';
                
                let statusColor = 'bg-yellow-100 text-yellow-800';
                let statusText = 'Pending';
                
                if (isConfirmed) {
                    statusColor = 'bg-green-100 text-green-800';
                    statusText = 'Confirmed';
                } else if (isExpired) {
                    statusColor = 'bg-red-100 text-red-800';
                    statusText = 'Expired';
                }
            %>
            <div class="bg-white rounded-xl shadow p-6 visit-item" data-status="<%= isConfirmed ? 'confirmed' : (isExpired ? 'expired' : 'pending') %>">
                <div class="flex flex-col md:flex-row">
                    <!-- Property Image -->
                    <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                        <% if (property.images && property.images.length > 0) { %>
                        <img src="<%= property.images[0].url %>" alt="<%= property.title %>" 
                             class="w-full h-48 object-cover rounded-lg">
                        <% } else { %>
                        <div class="w-full h-48 bg-gray-200 rounded-lg flex items-center justify-center">
                            <i class="fas fa-home text-gray-400 text-4xl"></i>
                        </div>
                        <% } %>
                    </div>
                    
                    <!-- Visit Details -->
                    <div class="flex-1">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="font-bold text-xl text-gray-900"><%= property.title %></h3>
                                <p class="text-gray-600 text-sm flex items-center mt-1">
                                    <i class="fas fa-map-marker-alt mr-2 text-gray-400"></i>
                                    <%= property.address.area %>, <%= property.address.city %>
                                </p>
                            </div>
                            <span class="<%= statusColor %> text-sm font-medium px-3 py-1 rounded-full">
                                <%= statusText %>
                            </span>
                        </div>
                        
                        <!-- Visit Timeline -->
                        <div class="mb-6">
                            <div class="flex items-center">
                                <div class="text-center">
                                    <div class="w-8 h-8 rounded-full <%= isConfirmed ? 'bg-green-100 text-green-600' : 'bg-blue-100 text-blue-600' %> flex items-center justify-center mx-auto mb-2">
                                        <i class="fas fa-cart-plus text-sm"></i>
                                    </div>
                                    <p class="text-xs text-gray-600">Added</p>
                                    <p class="text-xs font-medium"><%= new Date(item.added_at).toLocaleDateString() %></p>
                                </div>
                                
                                <div class="flex-1 h-1 mx-4 <%= isConfirmed ? 'bg-green-500' : 'bg-gray-300' %>"></div>
                                
                                <div class="text-center">
                                    <div class="w-8 h-8 rounded-full <%= isConfirmed ? 'bg-green-100 text-green-600' : isExpired ? 'bg-red-100 text-red-600' : 'bg-yellow-100 text-yellow-600' %> flex items-center justify-center mx-auto mb-2">
                                        <% if (isConfirmed) { %>
                                        <i class="fas fa-check text-sm"></i>
                                        <% } else if (isExpired) { %>
                                        <i class="fas fa-times text-sm"></i>
                                        <% } else { %>
                                        <i class="fas fa-calendar-day text-sm"></i>
                                        <% } %>
                                    </div>
                                    <p class="text-xs text-gray-600">Visit</p>
                                    <% if (!isConfirmed && !isExpired) { %>
                                    <p class="text-xs font-medium text-yellow-600"><%= daysLeft %> days left</p>
                                    <% } %>
                                </div>
                                
                                <% if (isConfirmed) { %>
                                <div class="flex-1 h-1 mx-4 bg-green-500"></div>
                                
                                <div class="text-center">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mx-auto mb-2">
                                        <i class="fas fa-calendar-check text-sm"></i>
                                    </div>
                                    <p class="text-xs text-gray-600">Booking</p>
                                    <p class="text-xs font-medium">60 days</p>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Visit Information -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                            <div class="border rounded-lg p-4">
                                <p class="text-sm text-gray-600 mb-1">Price</p>
                                <p class="font-bold text-blue-600">â‚¹<%= property.price.toLocaleString() %></p>
                            </div>
                            <div class="border rounded-lg p-4">
                                <p class="text-sm text-gray-600 mb-1">Property Type</p>
                                <p class="font-medium"><%= property.property_type %></p>
                            </div>
                            <div class="border rounded-lg p-4">
                                <p class="text-sm text-gray-600 mb-1">Visit Window</p>
                                <p class="font-medium">
                                    <% if (isConfirmed) { %>
                                    Confirmed on <%= item.visit_confirmed_at ? new Date(item.visit_confirmed_at).toLocaleDateString() : 'N/A' %>
                                    <% } else if (isExpired) { %>
                                    Expired on <%= visitExpiry.toLocaleDateString() %>
                                    <% } else { %>
                                    Until <%= visitExpiry.toLocaleDateString() %>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="flex flex-wrap gap-3">
                            <a href="/buyer/properties/<%= property._id %>" 
                               class="bg-blue-100 text-blue-700 px-4 py-2 rounded-lg hover:bg-blue-200">
                                <i class="fas fa-eye mr-2"></i>View Property
                            </a>
                            
                            <% if (!isConfirmed && !isExpired) { %>
                            <a href="/buyer/schedule-visit/<%= property._id %>" 
                               class="bg-green-100 text-green-700 px-4 py-2 rounded-lg hover:bg-green-200">
                                <i class="fas fa-calendar-day mr-2"></i>Schedule Visit
                            </a>
                            
                            <button onclick="confirmVisit('<%= property._id %>')" 
                                    class="bg-yellow-100 text-yellow-700 px-4 py-2 rounded-lg hover:bg-yellow-200">
                                <i class="fas fa-check-circle mr-2"></i>Confirm Visit Now
                            </button>
                            <% } %>
                            
                            <% if (isConfirmed) { %>
                            <button class="bg-purple-100 text-purple-700 px-4 py-2 rounded-lg hover:bg-purple-200">
                                <i class="fas fa-money-check-alt mr-2"></i>Proceed to Booking
                            </button>
                            <% } %>
                            
                            <% if (!isConfirmed) { %>
                            <button onclick="removeFromCart('<%= property._id %>')" 
                                    class="bg-red-100 text-red-700 px-4 py-2 rounded-lg hover:bg-red-200">
                                <i class="fas fa-trash mr-2"></i>Remove
                            </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } %>
    </div>

    <script>
        // Filter visits by status
        function filterVisits(status) {
            const items = document.querySelectorAll('.visit-item');
            items.forEach(item => {
                if (status === 'all' || item.dataset.status === status) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Update active tab
            document.querySelectorAll('button').forEach(btn => {
                if (btn.textContent.includes(status.charAt(0).toUpperCase() + status.slice(1))) {
                    btn.classList.add('border-b-2', 'border-blue-500', 'text-blue-600');
                } else if (btn.textContent !== 'All Visits') {
                    btn.classList.remove('border-b-2', 'border-blue-500', 'text-blue-600');
                    btn.classList.add('text-gray-600');
                }
            });
        }
        
        // Confirm visit function
        async function confirmVisit(propertyId) {
            try {
                const response = await fetch('/buyer/api/visit/confirm', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        propertyId: propertyId,
                        confirmationMethod: 'manual'
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Visit confirmed successfully! You now have 60 days to complete the booking.');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to confirm visit');
            }
        }
        
        // Remove from cart function
        async function removeFromCart(propertyId) {
            if (!confirm('Remove this property from cart?')) return;
            
            try {
                const response = await fetch('/buyer/api/cart/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ propertyId })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Property removed from cart');
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to remove from cart');
            }
        }
        
        // Update countdown timers
        function updateCountdowns() {
            const countdownElements = document.querySelectorAll('.text-yellow-600');
            countdownElements.forEach(el => {
                const text = el.textContent;
                const match = text.match(/(\d+)\s*days/);
                if (match) {
                    const days = parseInt(match[1]);
                    if (days > 0) {
                        el.textContent = (days - 1) + ' days';
                    } else if (days === 0) {
                        el.textContent = 'Last day';
                    } else {
                        el.textContent = 'Expired';
                        el.classList.remove('text-yellow-600');
                        el.classList.add('text-red-600');
                    }
                }
            });
        }
        
        // Update every minute
        setInterval(updateCountdowns, 60000);
    </script>
</body>
</html>