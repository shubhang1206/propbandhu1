<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Propbandhu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <!-- Buyer Navigation -->
    <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <a href="/" class="flex items-center">
                    <span class="text-xl font-bold text-gray-900">Propbandhu</span>
                </a>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-gray-700 font-medium">üè† Buyer: <%= user.name %></span>
                <a href="/buyer/dashboard" class="text-gray-600 hover:text-blue-600">
                    <i class="fas fa-home mr-1"></i>Dashboard
                </a>
                <a href="/buyer/properties" class="text-gray-600 hover:text-blue-600">
                    <i class="fas fa-search mr-1"></i>Browse
                </a>
                <a href="/buyer/cart" class="text-gray-600 hover:text-blue-600">
                    <i class="fas fa-shopping-cart mr-1"></i>My Cart
                </a>
                <a href="/buyer/visits" class="text-gray-600 hover:text-blue-600">
                    <i class="fas fa-calendar-day mr-1"></i>My Visits
                </a>
                <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">
                    <i class="fas fa-sign-out-alt mr-1"></i>Logout
                </a>
            </div>
        </div>
    </div>
</nav>
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Welcome Banner -->
        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-2xl p-6 text-white mb-8">
            <h1 class="text-3xl font-bold mb-2">Welcome, <%= user.name %>!</h1>
            <p class="text-blue-100">Find your dream property with ease</p>
        </div>

        <!-- Buyer Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-100 rounded-lg mr-4">
                        <i class="fas fa-shopping-cart text-blue-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">In Cart</h3>
                        <p class="text-3xl font-bold text-blue-600"><%= stats.cartCount %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-green-100 rounded-lg mr-4">
                        <i class="fas fa-calendar-check text-green-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">Visits Scheduled</h3>
                        <p class="text-3xl font-bold text-green-600"><%= stats.visitsScheduled %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-100 rounded-lg mr-4">
                        <i class="fas fa-clock text-yellow-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">Pending Visits</h3>
                        <p class="text-3xl font-bold text-yellow-600"><%= stats.visitsPending %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-purple-100 rounded-lg mr-4">
                        <i class="fas fa-eye text-purple-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">Recently Viewed</h3>
                        <p class="text-3xl font-bold text-purple-600"><%= recentProperties.length %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <a href="/buyer/properties" class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-100 rounded-lg mr-4">
                        <i class="fas fa-search text-blue-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">Browse Properties</h3>
                        <p class="text-gray-600 text-sm">Find your dream home</p>
                    </div>
                </div>
            </a>
            
            <a href="/buyer/cart" class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 bg-green-100 rounded-lg mr-4">
                        <i class="fas fa-shopping-cart text-green-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">View Cart</h3>
                        <p class="text-gray-600 text-sm">Manage saved properties</p>
                    </div>
                </div>
            </a>
            
            <a href="/buyer/visits" class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-100 rounded-lg mr-4">
                        <i class="fas fa-calendar-day text-yellow-600 text-2xl"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-700">My Visits</h3>
                        <p class="text-gray-600 text-sm">Schedule property visits</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Cart Preview -->
        <% if (cart.items.length > 0) { %>
        <div class="bg-white rounded-xl shadow p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Recently Added to Cart</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% cart.items.slice(0, 2).forEach(item => { %>
                <div class="border rounded-lg p-4">
                    <h3 class="font-bold text-lg text-gray-900"><%= item.property.title %></h3>
                    <p class="text-gray-600 text-sm mb-2"><%= item.property.location || 'Location not specified' %></p>
                    <div class="flex justify-between items-center">
                        <span class="text-blue-600 font-bold">‚Çπ<%= item.property.price.toLocaleString() %></span>
                        <a href="/buyer/properties/<%= item.property._id %>" class="text-blue-600 hover:text-blue-800 text-sm">
                            View Details ‚Üí
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
            <% if (cart.items.length > 2) { %>
            <div class="mt-4 text-center">
                <a href="/buyer/cart" class="text-blue-600 hover:text-blue-800">
                    View all <%= cart.items.length %> properties in cart ‚Üí
                </a>
            </div>
            <% } %>
        </div>
        <% } %>

        <!-- Recently Viewed -->
        <% if (recentProperties.length > 0) { %>
        <div class="bg-white rounded-xl shadow p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Recently Viewed Properties</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% recentProperties.forEach(property => { %>
                <div class="border rounded-lg p-4">
                    <h3 class="font-bold text-lg text-gray-900"><%= property.title %></h3>
                    <p class="text-gray-600 text-sm mb-2"><%= property.location || 'Location not specified' %></p>
                    <div class="flex justify-between items-center">
                        <span class="text-blue-600 font-bold">‚Çπ<%= property.price.toLocaleString() %></span>
                        <a href="/buyer/properties/<%= property._id %>" class="text-blue-600 hover:text-blue-800 text-sm">
                            View Again ‚Üí
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        <% } %>
    </div>
</body>
</html>