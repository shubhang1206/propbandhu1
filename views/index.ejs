<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Propbandhu' %></title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Include navbar -->
  <%- include('partials/navbar', { activePage: activePage || 'home' }) %>

  <!-- Hero Section -->
  <section class="hero">
    <!-- Replace with your actual hero image path -->
    <img src="/assets/Desktop-DMELDU-S.jpg" alt="Luxury Real Estate" class="hero-bg" />
    <div class="overlay"></div>
    <div class="hero-content">
      <p class="subtitle">One-Stop Bespoke Solution for Developers, HNIs and Advisors</p>
      <h1>Redefining Ultra Luxury Real Estate Through Innovation and Expertise</h1>
      <a href="/properties" class="cta-btn">Explore Our Platforms</a>
      <div class="search-bar">
        <div class="search-field">
          <select class="custom-select" id="city-select">
            <option value="">Select City</option>
            <option value="Noida">Noida</option>
            <option value="Ghaziabad">Ghaziabad</option>z
          </select>
          <span class="search-arrow">&#9662;</span>
        </div>
        <div class="divider"></div>
        <div class="search-field">
          <select class="custom-select" id="location-select">
            <option>Select Location(s)</option>
          </select>
          <span class="search-arrow">&#9662;</span>
        </div>
        <div class="divider"></div>
        <div class="search-field">
          <select class="custom-select" id="status-select">
            <option value="">Select Project Status</option>
            <option value="under-construction">Under Construction</option>
            <option value="ready-to-move">Ready to Move</option>
            <option value="new-launch">New Launch</option>
          </select>
          <span class="search-arrow">&#9662;</span>
        </div>
        <div class="divider"></div>
        <div class="search-field">
          <select class="custom-select" id="budget-select">
            <option value="">Select Budget(s)</option>
            <option value="under-25">Under ₹50 lakh</option>
            <option value="25-50">₹50 lakh – ₹75 lakh</option>
            <option value="50-75">₹75 lakh – ₹1 crore</option>
            <option value="1-1.5">₹1 crore – ₹1.5 crore</option>
            <option value="1.5-2">₹1.5 crore – ₹2 crore</option>
            <option value="above-2">Above ₹2 crore</option>
          </select>
          <span class="search-arrow">&#9662;</span>
        </div>
        <button class="search-btn">
          Search
          <span class="search-btn-arrow">&#8594;</span>
        </button>
      </div>
    </div>
    <button class="scroll-down-btn" aria-label="Scroll down">
      <svg width="40" height="60" viewBox="0 0 40 60" fill="none">
        <rect x="5" y="5" width="30" height="50" rx="15" stroke="#fff" stroke-width="3"></rect>
        <polyline points="14,34 20,40 26,34" fill="none" stroke="#fff" stroke-width="3" stroke-linecap="round"
          stroke-linejoin="round"></polyline>
      </svg>
    </button>
  </section>

  <!-- Include properties section -->
  <%- include('partials/properties') %>

  <!-- Include needs section -->
  <%- include('partials/need-section') %>

  <!-- Blog Section -->
  <section id="blogSection" class="blog-section">
    <h2>Latest Blog Posts</h2>
    <div id="homepageBlogPosts">
      <div class="loading-placeholder" style="color: #ccc; text-align: center; padding: 40px;">
        Loading blog posts...
      </div>
    </div>
  </section>

  <!-- Include footer -->
  <%- include('partials/footer') %>

  <script src="/js/script.js"></script>
</body>
</html>